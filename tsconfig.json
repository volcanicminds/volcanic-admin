{
	"extends": "@vue/tsconfig/tsconfig.web.json",
	"include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"types": ["jest", "node", "axios", "vuetify"],
		"noImplicitThis": false
	},
	"vueCompilerOptions": {
		"target": 2.7
	},
	"references": [
		{
			"path": "./tsconfig.config.json"
		}
	]
}
